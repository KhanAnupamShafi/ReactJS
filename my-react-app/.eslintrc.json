{
  "env": {
    "browser": true,
    "es2021": true
  },

  "extends": [
    "plugin:react/recommended",
    "eslint:recommended",
    // "airbnb",
    "prettier",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "requireConfigFile": false,
    "babelOptions": {
      "presets": ["@babel/preset-react"]
    },
    "es6": true,
    "ecmaVersion": 12,
    "sourceType": "module"
  },

  "plugins": [
    "react",
    "prettier",
    "jsx-a11y",
    "import"
    // "babel"
    // "@babel/plugin-proposal-class-properties",
    // "@babel/plugin-proposal-private-methods"
  ],

  "parser": "@babel/eslint-parser",

  "rules": {
    "no-unused-vars": "warn",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",

    "import/first": "error",
    "react/prop-types": 0,
    "linebreak-style": "off",
    "prettier/prettier": 0 /*  [
      "error",
      {
        "endOfLine": "auto"
      }
    ] */
    // "no-invalid-this": 0,
    // "babel/no-invalid-this": 1
  }
}
